<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity ScheduleDate.
    -->
    <changeSet id="20160404010950" author="jhipster">
        <createTable tableName="schedule_date">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false" />
            </column>
            
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="schedule_date_event_type">
            <column name="event_types_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="schedule_dates_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="schedule_dates_id, event_types_id" tableName="schedule_date_event_type"/>

        <addForeignKeyConstraint baseColumnNames="schedule_dates_id"
                                 baseTableName="schedule_date_event_type"
                                 constraintName="fk_schedule_date_event_type_eventtype_id"
                                 referencedColumnNames="id"
                                 referencedTableName="schedule_date"/>

        <addForeignKeyConstraint baseColumnNames="event_types_id"
                                 baseTableName="schedule_date_event_type"
                                 constraintName="fk_schedule_date_event_type_scheduledate_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event_type"/>
        
    </changeSet>
</databaseChangeLog>
