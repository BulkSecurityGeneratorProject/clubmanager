<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Job.
    -->
    <changeSet id="20160404010346" author="jhipster">
        <createTable tableName="job">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="point_value" type="${floatType}">
                <constraints nullable="false" />
            </column>
            
            <column name="cash_value" type="${floatType}"/>
            
            <column name="job_day" type="varchar(255)"/>
            
            <column name="sort_order" type="integer">
                <constraints nullable="false" />
            </column>
            
            <column name="reserved" type="bit"/>
            
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="job_event_type">
            <column name="event_types_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="jobs_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="jobs_id, event_types_id" tableName="job_event_type"/>

        <addForeignKeyConstraint baseColumnNames="jobs_id"
                                 baseTableName="job_event_type"
                                 constraintName="fk_job_event_type_eventtype_id"
                                 referencedColumnNames="id"
                                 referencedTableName="job"/>

        <addForeignKeyConstraint baseColumnNames="event_types_id"
                                 baseTableName="job_event_type"
                                 constraintName="fk_job_event_type_job_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event_type"/>
        
    </changeSet>
</databaseChangeLog>
